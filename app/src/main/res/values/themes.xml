<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DayStory" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/outlined_Button_Border</item>
        <item name="colorPrimaryVariant">@color/registrationBase</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/registrationBase</item>
        <item name="colorSecondaryVariant">@color/registrationTextColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Light status bar -->
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DayStory" parent="Base.Theme.DayStory" />

